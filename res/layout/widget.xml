<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp" android:layout_height="160dp"
    android:padding="@dimen/widget_margin" android:background="@drawable/layout_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SpreadCoin"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:textColor="#428bca"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heartbeat"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:textColor="#428bca"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:id="@+id/imageView"
        android:src="@drawable/spr_heart"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="7dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hashrate"
        android:id="@+id/textView2"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp"
        android:textColor="#ff848082" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Difficulty"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginTop="10dp"
        android:textColor="#ff848082" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price ฿"
        android:id="@+id/textView5"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:textColor="#ff848082" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capital ฿"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginTop="10dp"
        android:textColor="#ff848082" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/textView7"
        android:paddingLeft="3dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:textColor="#ff353535" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/textView8"
        android:paddingLeft="3dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:textColor="#ff353535" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/textView9"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:paddingLeft="3dp"
        android:textColor="#ff353535" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/textView10"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:paddingLeft="3dp"
        android:textColor="#ff353535" />

    <ImageView
        android:layout_width="14dp"
        android:layout_height="13dp"
        android:id="@+id/imageView3"
        android:src="@drawable/arrow_up_down"
        android:paddingTop="0dp"
        android:paddingBottom="3dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:layout_width="14dp"
        android:layout_height="13dp"
        android:id="@+id/imageView4"
        android:src="@drawable/arrow_up_down"
        android:scaleType="fitXY"
        android:paddingTop="0dp"
        android:paddingBottom="3dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:layout_width="14dp"
        android:layout_height="13dp"
        android:id="@+id/imageView5"
        android:src="@drawable/arrow_up_down"
        android:scaleType="fitXY"
        android:paddingTop="0dp"
        android:paddingBottom="3dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignRight="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4"
        android:layout_marginTop="5dp"
        />


    <ImageView
        android:layout_width="14dp"
        android:layout_height="13dp"
        android:id="@+id/imageView2"
        android:src="@drawable/arrow_up_down"
        android:scaleType="fitXY"
        android:paddingTop="0dp"
        android:paddingBottom="3dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>